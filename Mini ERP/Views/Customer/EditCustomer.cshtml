@model CustomerViewModel
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header">
					<h4 class="mb-0">EDIT Customer Form </h4>
				</div>
				<div class="card-body">
					<form method="post">
						<div class="form-group">
							<label asp-for="Name"></label>
							<input asp-for="Name" class="form-control" placeholder="Customer name...">
							<span asp-validation-for="Name" class="small text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="VatNumber"></label>
							<textarea asp-for="VatNumber" rows="1" class="form-control" placeholder="Customer VAT number..."></textarea>
							<span asp-validation-for="VatNumber" class="small text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="City"></label>
							<input asp-for="City" class="form-control" placeholder="...">

							<span asp-validation-for="City" class="small text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Address"></label>
							<input asp-for="Address" class="form-control" placeholder="...">
							<span asp-validation-for="Address" class="small text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Manager"></label>
							<input asp-for="Manager" class="form-control" placeholder="...">
							<span asp-validation-for="Manager" class="small text-danger "></span>
						</div>
						<div class="form-group">
							<label asp-for="PhoneNumber"></label>
							<input asp-for="PhoneNumber" class="form-control" placeholder="0888 888 888">
							<span asp-validation-for="PhoneNumber" class="small text-danger" placeholder="0888 888 888"></span>
						</div>


						<div class="text-center">
							<input class="btn btn-primary mt-3" type="submit" value="Save" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

