@model InvoiceViewModel
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="CustomerId"></label>
				<input asp-for="CustomerId" class="form-control" placeholder="....">
				<span asp-validation-for="CustomerId" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CustomerName"></label>
				<textarea asp-for="CustomerName" rows="4" class="form-control" placeholder="..."></textarea>
				<span asp-validation-for="CustomerName" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TotalPrice"></label>
				<input asp-for="TotalPrice" class="form-control" placeholder="Total price...">
				<span asp-validation-for="TotalPrice" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="OrderId"></label>
				<input asp-for="OrderId" class="form-control" placeholder="If client have order id number please put it here...">
				<span asp-validation-for="TotalPrice" class="small text-danger"></span>
			</div>

			

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>
