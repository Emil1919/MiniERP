
@model ShipingAdressFormViewModel


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Address Form</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Shipping Address</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="SubmitAddress" method="post">
                            <div class="form-group">
                                <label asp-for="PersonName" class="control-label">Full Name of contact person<span class="text-danger">*</span></label>
                                <input asp-for="PersonName" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label">Street Address<span class="text-danger">*</span></label>
                                <input asp-for="Address" class="form-control" required />
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="City" class="control-label">City<span class="text-danger">*</span></label>
                                    <input asp-for="City" class="form-control" required />
                                </div>
                                
                                
                            </div>
                            <div class="form-group">
                                <label asp-for="Note" class="control-label">Note<span class="text-danger">*</span></label>
                                <input asp-for="Note" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <small class="form-text text-muted">Include country code if applicable.</small>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS and jQuery (required for some Bootstrap features) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>